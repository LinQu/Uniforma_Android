<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
        android:id="@+id/tvNimMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nim " />

        <TextView
            android:id="@+id/tvNamaMahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mahasiswa" />

        <!-- Tambahkan CheckBox untuk kolom-kolom pelanggaran -->
        <!-- Contoh: -->
        <CheckBox
            android:id="@+id/cbKukuPanjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuku Panjang" />

        <CheckBox
            android:id="@+id/cbRambut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rambut" />

        <CheckBox
            android:id="@+id/cbIdCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Card" />

        <CheckBox
            android:id="@+id/cbSeragam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seragam" />

        <!-- Tambahkan CheckBox untuk kolom-kolom pelanggaran lainnya -->
    </LinearLayout>


